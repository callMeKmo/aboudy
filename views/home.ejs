<% if (products.length == 0 && categories.length == 0) { %>
    <h2 class="msg-3100 show-message"></h2>
<% } else { %>
    <% if ( products.length != 0) { %>
        <div style="display: grid;grid-column: 1/2;grid-row: 2/-1;grid-template-columns: 15px 1fr 15px;width: 100%;grid-template-rows: min-content 1fr;">
            <h2 id="srcResult" style="margin-top: 15px;margin-bottom: 15px;height: 30px;grid-column: 2/3;"></h2>
            <div class="items">
                <% products.forEach(product => { %>
                    <a href="/p/<%= product[0].id %>/show"><div class="item">
                        <% if(product[1] != null) { %> 
                            <img src="<%= product[1].imagePath %>" alt="" width="150" height="150">
                        <% } else { %>
                            <img src="/images/icons/loadingFaild.png" alt="" width="150" height="150">
                            <% } %> 
                            <h2 style="font-size: 18px; text-align: center;grid-column: 1/-1;"><%= product[0].title %></h2>
                    </div></a>
                <% }) %>
            </div>
        </div>
    <% } else { %>
        <div style="display: grid;grid-column: 1/2;grid-row: 2/-1;grid-template-columns: 15px 1fr 15px;width: 100%;grid-template-rows: min-content 1fr;">
            <h2 id="newProducts" style="margin-top: 15px;margin-bottom: 15px;height: 30px;grid-column: 2/3;"></h2>
            <div class="items">
                <% categories.forEach(product => { %>
                    <a href="/c/<%= product[0].id %>/show"><div class="item">
                        <% if(product[1] != null) { %> 
                            <img src="<%= product[1].imagePath %>" alt="" width="150" height="150">
                        <% } else { %>
                            <img src="/images/icons/loadingFaild.png" alt="" width="150" height="150">
                            <% } %> 
                            <h2 style="font-size: 18px; text-align: center;grid-column: 1/-1;"><%= product[0].title %></h2>
                    </div></a>
                <% }) %>
            </div>
        </div>
    <% } %> 
<% } %>