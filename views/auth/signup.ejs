<div style="display: grid;grid-column: 1/2;grid-row: 2/-1;grid-template-columns: 15px 1fr 15px;width: 100%;grid-template-rows: min-content 1fr;">
    <div class="content-block" style="grid-row: 2/-1;">
        <form class="signup-form" id="signup" method="post">
            <img src="/images/favicon.ico" alt="">
            <label>
                <input id="email" type="email" name="email">
            </label>
            <label>
                <input id="username" type="text" name="username">
            </label>
            <label>
                <input id="password" type="password" name="password">
            </label>
            <label>
                <input id="confirmPassword" type="password" name="confirmPassword">
            </label>
            <button id="signupBtn" type="submit"></button>
            <h2 id="signupNote"></h2>
        </form>
    </div>
</div>